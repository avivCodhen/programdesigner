@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}


<div class="container my-5 center-div flex-column v-align">
    <h1>Enter your email</h1>
    <p>You'll be able to log in in less than a minute.</p>
    <div class="row w-100 center-div">
        <div class="col-10 col-lg-5">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Input.Email" class="form-control" placeholder="Your account's email"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="center-div mt-4">
                    <button type="submit" class="btn bg-main text-white">Send Email Confirmation</button>

                </div>
            </form>
        </div>
    </div>


</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
