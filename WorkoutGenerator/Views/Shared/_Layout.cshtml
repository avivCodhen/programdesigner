<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Fitness Program Designer</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </environment>
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/@@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
    @RenderSection("Head", false)
    <!-- Hotjar Tracking Code for programdesigner.io -->
    <script>
        (function (h, o, t, j, a, r) {
            h.hj = h.hj || function () { (h.hj.q = h.hj.q || []).push(arguments) };
            h._hjSettings = { hjid: 1459020, hjsv: 6 };
            a = o.getElementsByTagName('head')[0];
            r = o.createElement('script'); r.async = 1;
            r.src = t + h._hjSettings.hjid + j + h._hjSettings.hjsv;
            a.appendChild(r);
        })(window, document, 'https://static.hotjar.com/c/hotjar-', '.js?sv=');
    </script>

</head>
<body class="bg-white">
<header>
    <nav id="siteNavBar" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-main justify-content-between" style="box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);">
        <div>
            <a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index">
                <img style="width: 150px;" src="~/images/white-text-logo.png"/>
            </a>
            <button class="btn text-white my-2 my-sm-0 mr-2" style="background: #FFA500">Go Premium</button>

        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
            <ul class="navbar-nav d-inline-block">
                <li class="nav-item">
                    <div class="form-inline">
                        <button id="registerBtn" data-toggle="modal" data-target="#registerModal"  class="btn bg-white color-main my-2 my-sm-0 mr-2">Register</button>
                        <button class="btn my-2 my-sm-0 text-white">Login</button>
                    </div>
                </li>
            </ul>

        </div>

    </nav>
    <partial name="Register/_RegisterModalPartial" model="@new RegisterViewModel()"/>

</header>
<div class="">
    @*<partial name="_CookieConsentPartial" />*@
    <main role="main" class="">
        @RenderBody()
    </main>
</div>

<footer class="footer text-muted bg-main">
    <div class="container text-center text-white">
        &copy; 2019 - Program Designer
    </div>
</footer>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</environment>
<environment exclude="Development">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</environment>
<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    $(function() {
        $('#registerBtn').on('click',
            function() {
                $.ajax({
                    url: '@Url.Action("RegisterAsyncAjax", "User")',        
                    type: 'POST',   
                    headers: {
                        RequestVerificationToken: 
                            $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    processData: true,
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        alert('success');
                    }.bind(this),
                    error: function (error) {
                        alert('fuck');

                    }
                });
            });
    });
</script>

@RenderSection("Scripts", required: false)
</body>
</html>