@using WorkoutGenerator.Extentions
@model ProgramViewModel

<div class="container my-5">
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-lg-6  d-flex flex-column">

            @{


                @foreach (var workouts in Model.TemplateViewModel.Workouts)
                 {
                     <div class="card p-3 text-white bg-success">Workout</div>

                     @foreach (var muscle in workouts.MuscleExerciseViewModels)
                      {
                          <div class="py-2 mb-3" style="border-bottom: white solid 1px;">
                              <h3 class="mb-0 text-white">@muscle.MuscleType.ToString()</h3>
                          </div>

                          @foreach (var exercise in muscle.Exercises)
                           {
                               <div class="my-2 card p-3 shadow">

                                   <div>
                                       <p class="mb-1 " style="font-size: 17px; letter-spacing: 1px;">@exercise.Name</p>
                                   </div>
                                   <div class="d-flex">
                                       <p class="pr-3 mb-0"><span class="font-weight-bold color-main">Sets: </span>@exercise.Sets</p>
                                       <p class="pr-3 mb-0"><span class="font-weight-bold color-main ">Reps: </span>@exercise.Reps</p>
                                       <p class="mb-0"><span class="font-weight-bold color-main ">Rest: </span>@exercise.Rest</p>

                                   </div>
                               </div>
                           }
                      }
                 }
            }

        </div>


    </div>
</div>